extends layout

block content
  div(class='chatbox flex flex-col justify-between h-screen')
    header(class='flex bg-main p-4 justify-between')
      span Chatbox title
      span Online: 0

    div(id="set-nickname" class="bg-[rgba(0,0,0,.6)] absolute left-0 right-0 top-0 bottom-0 z-10")
      form(id="set-nickname-form" class="mx-2 sm:mx-0 sm:w-1/2 lg:w-1/3 bg-main rounded-xl overflow-hidden absolute left-2 right-2 sm:left-1/2 top-1/2 sm:transform sm:-translate-x-1/2 -translate-y-1/2")
        div( class="px-8 py-12")
          p(class="text-white") Set nickname and its color:
          div(class="flex gap-4")
            input(id="nickname-field" type="text" class="flex-1 p-2 focus:outline-none w-full rounded")
            div(class="relative")
              input(id="color-input" type="color" value="#00B7FF" class="absolute h-full invisible pointer-events-none")
              div(id="color-preview" class="w-[40px] h-[40px] cursor-pointer rounded bg-main border-solid border-white border-2" onclick="document.querySelector('#color-input').click()")
        input(id="set-nickname-button" type="submit" value="Set" class="block cursor-pointer w-full p-4 bg-custom-red text-white text-lg")

    div(id="chat-content" class="p-4 flex-1 bg-dark-gray text-white overflow-y-scroll scroll-smooth")
      div(id="spinner" class="w-8 h-8 border-white border-t-custom-red border-4 rounded-full animate-spin m-auto" style="display:none")
      div(id="content" style="display:none")

    div(class="bg-main p-4 bottom-0 w-full")
      form(id="message-form" class="flex gap-4")
        input(id="message-field" type="text" class="flex-1 p-2 focus:outline-none rounded" disabled)
        input(id="send-message-button" type="submit" class="w-32 lg:w-64 bg-custom-red text-white disabled:grayscale rounded cursor-pointer" value="Send" disabled)
